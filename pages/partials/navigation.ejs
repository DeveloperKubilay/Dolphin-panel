<style>
:root {
  --sidebar-width: 250px;
  --sidebar-collapsed-width: 80px;
  --transition-normal: 0.3s ease;
  --transition-fast: 0.2s ease;
  --surface: #161617;
  --surface-light: #1e1e22;
  --text: #ffffff;
  --text-light: #b0b0b0;
  --primary: #007bff;
  --primary-light: #66b3ff;
  --danger: #ff3860;
  --radius-sm: 4px;
  --radius-md: 8px;
  --font-size-sm: 0.875rem;
  --font-size-md: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --space-xs: 0.25rem;
  --space-sm: 0.5rem;
  --space-md: 1rem;
  --space-lg: 1.5rem;
}
.navbar {
  position: fixed;
  top: 0;
  left: var(--sidebar-width);
  right: 0;
  height: 70px;
  background-color: var(--surface);
  border-bottom: 1px solid var(--surface-light);
  z-index: 40;
  transition: left var(--transition-normal);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 0 var(--space-lg);
}

.navbar-left {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

.sidebar-toggle {
  display: none;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: var(--space-xs);
  border-radius: var(--radius-sm);
}

.sidebar-toggle span {
  display: block;
  width: 24px;
  height: 2px;
  background-color: var(--text);
  margin: 5px 0;
  transition: all var(--transition-fast);
}

.navbar-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text);
  margin: 0;
}

.navbar-right {
  display: flex;
  align-items: center;
  gap: var(--space-lg);
}

.navbar-user {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.navbar-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--primary-light);
}

.navbar-username {
  color: var(--text);
  font-weight: 500;
  font-size: var(--font-size-sm);
}

.navbar-logout {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: var(--radius-md);
  background-color: var(--surface-light);
  color: var(--text);
  transition: background-color var(--transition-fast);
}

.navbar-logout:hover {
  background-color: var(--danger);
}

.icon-logout {
  background: url("/panel/logout.png") no-repeat center center;
  background-size: 20px;
  width: 20px;
  height: 20px;
  display: inline-block;
}

/* Responsive styles */
@media (max-width: 1024px) {
  .navbar {
    left: var(--sidebar-collapsed-width);
  }
}

@media (max-width: 768px) {
  .navbar {
    left: 0;
  }
  
  .sidebar-toggle {
    display: block;
  }
  
  .navbar-content {
    padding: 0 var(--space-md);
  }
  
  .navbar-username {
    display: none;
  }
}

@media (max-width: 480px) {
  .navbar-title {
    font-size: var(--font-size-lg);
    max-width: 150px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
}
</style>
<div class="navbar">
  <div class="navbar-content">
    <div class="navbar-left">
      <button id="sidebar-toggle" class="sidebar-toggle">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <h2 class="navbar-title"><%= settings.panelinfo.name || "Dolphin" %></h2>
    </div>
    
    <div class="navbar-right">
      <div class="navbar-user">
        <img src="/admin/admin.jpg" alt="Profile" class="navbar-avatar">
        <span class="navbar-username"><%= settings.owner.mail %></span>
      </div>
      
      <a href="/logout" class="navbar-logout">
        <i class="icon-logout"></i>
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const sidebar = document.querySelector('.sidebar');
    
    if (sidebarToggle && sidebar) {
      sidebarToggle.addEventListener('click', function() {
        sidebar.classList.toggle('active');
      });
    }
  });
</script>