<div class="sidebar">
  <div class="sidebar-header">
    <div class="logo-container">
      <img src="/icon.png" alt="Dolphin Logo" class="logo-img">
      <h3 class="logo-text"><%= settings.panelinfo.name || "Dolphin panel" %></h3>
    </div>
  </div>
  
  <div class="sidebar-content">
    <div class="sidebar-section">
      <h4 class="sidebar-section-title">PANEL</h4>
      <ul class="sidebar-nav">
        <li class="sidebar-item <%= page === 'panel' ? 'active' : '' %>">
          <a href="/admin/panel" class="sidebar-link">
            <div class="sidebar-icon">
              <i class="icon-settings"></i>
            </div>
            <span>Settings</span>
            <% if(page === "panel") { %>
              <div class="active-indicator"></div>
            <% } %>
          </a>
        </li>
        <li class="sidebar-item <%= page === 'gills' ? 'active' : '' %>">
          <a href="/admin/gills" class="sidebar-link">
            <div class="sidebar-icon">
              <i class="icon-branc"></i>
            </div>
            <span>Gills</span>
            <% if(page === "gills") { %>
              <div class="active-indicator"></div>
            <% } %>
          </a>
        </li>
      </ul>
    </div>
    
    <div class="sidebar-section">
      <h4 class="sidebar-section-title">MANAGEMENT</h4>
      <ul class="sidebar-nav">
        <li class="sidebar-item <%= page === 'servers' ? 'active' : '' %>">
          <a href="/admin/servers" class="sidebar-link">
            <div class="sidebar-icon">
              <i class="icon-servers"></i>
            </div>
            <span>Servers</span>
            <% if(page === "servers") { %>
              <div class="active-indicator"></div>
            <% } %>
          </a>
        </li>
        <li class="sidebar-item <%= page === 'users' ? 'active' : '' %>">
          <a href="/admin/users" class="sidebar-link">
            <div class="sidebar-icon">
              <i class="icon-users"></i>
            </div>
            <span>Users</span>
            <% if(page === "users") { %>
              <div class="active-indicator"></div>
            <% } %>
          </a>
        </li>
      </ul>
    </div>
    
    <div class="sidebar-section">
      <h4 class="sidebar-section-title">MACHINE MANAGEMENT</h4>
      <ul class="sidebar-nav">
        <li class="sidebar-item <%= page === 'os' ? 'active' : '' %>">
          <a href="/admin/os" class="sidebar-link">
            <div class="sidebar-icon">
              <i class="icon-os"></i>
            </div>
            <span>Os</span>
            <% if(page === "os") { %>
              <div class="active-indicator"></div>
            <% } %>
          </a>
        </li>
      </ul>
    </div>
  </div>  
  <div class="sidebar-footer">
    <div class="version-info">v<%= settings.panelinfo.version || "1.0" %></div>
  </div>
</div>

<style>
:root {
  --sidebar-width: 260px;
  --sidebar-collapsed-width: 80px;
}

.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  width: var(--sidebar-width);
  background-color: var(--surface);
  border-right: 1px solid var(--surface-light);
  display: flex;
  flex-direction: column;
  transition: width var(--transition-normal);
  z-index: 50;
  overflow-y: auto;
  overflow-x: hidden;
  scrollbar-width: thin;
}

.sidebar-header {
  padding: var(--space-md);
  display: flex;
  align-items: center;
  border-bottom: 1px solid var(--surface-light);
  height: 70px;
}

.logo-container {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.logo-img {
  width: 32px;
  height: 32px;
  border-radius: var(--radius-sm);
}

.logo-text {
  font-weight: 700;
  font-size: var(--font-size-lg);
  color: white; /* Şeffaf gradient yerine beyaz renk kullanıyoruz */
  /* Gradient ve şeffaflık özelliklerini kaldırdık */
  margin: 0;
  text-shadow: 0px 0px 3px rgba(0, 0, 0, 0.2); /* Arka planla kontrast için hafif gölge */
}

.sidebar-content {
  flex-grow: 1;
  padding: var(--space-md) 0;
}

.sidebar-section {
  margin-bottom: var(--space-lg);
}

.sidebar-section-title {
  font-size: var(--font-size-xs);
  color: var(--text-muted);
  padding: 0 var(--space-lg);
  margin-bottom: var(--space-sm);
  font-weight: 600;
  letter-spacing: 0.05em;
}

.sidebar-nav {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

.sidebar-item {
  position: relative;
  margin: var(--space-xs) 0;
}

.sidebar-link {
  display: flex;
  align-items: center;
  padding: var(--space-sm) var(--space-lg);
  color: var(--text-muted);
  transition: color var(--transition-fast), background-color var(--transition-fast);
  border-radius: 0;
  font-weight: 500;
  position: relative;
  gap: var(--space-sm);
}

.sidebar-link:hover {
  background-color: var(--background-lighter);
  color: var(--text);
}

.sidebar-item.active .sidebar-link {
  color: var(--text);
  background-color: var(--background-lighter);
}

.sidebar-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
}

.icon-settings {
  background: url("/admin/settings.png") no-repeat center center;
  background-size: contain;
  width: 20px;
  height: 20px;
  display: inline-block;
}

.icon-branc {
  background: url("/admin/branc.png") no-repeat center center;
  background-size: contain;
  width: 20px;
  height: 20px;
  display: inline-block;
}

.icon-servers {
  background: url("/admin/servers.png") no-repeat center center;
  background-size: contain;
  width: 20px;
  height: 20px;
  display: inline-block;
}

.icon-users {
  background: url("/admin/users.png") no-repeat center center;
  background-size: contain;
  width: 20px;
  height: 20px;
  display: inline-block;
}

.icon-os {
  background: url("/admin/os.png") no-repeat center center;
  background-size: contain;
  width: 20px;
  height: 20px;
  display: inline-block;
}

.active-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4px;
  background: linear-gradient(to bottom, var(--primary), var(--secondary));
  border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
}

.sidebar-footer {
  padding: var(--space-md);
  border-top: 1px solid var(--surface-light);
  display: flex;
  justify-content: center;
}

.version-info {
  font-size: var(--font-size-xs);
  color: var(--text-muted);
}

/* Responsive styles */
@media (max-width: 1024px) {
  .sidebar {
    width: var(--sidebar-collapsed-width);
  }

  .sidebar:hover {
    width: var(--sidebar-width);
  }

  .logo-text {
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .sidebar:hover .logo-text {
    opacity: 1;
  }

  .sidebar-link span {
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .sidebar:hover .sidebar-link span {
    opacity: 1;
  }
}

@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
    width: var(--sidebar-width);
  }
  
  .sidebar.active {
    transform: translateX(0);
  }
}
</style>